<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".glass">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true"
        android:padding="30dp">


        <TextView
            android:id="@+id/galss_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="유리병류"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/glass_2"
            android:layout_width="87dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/glass" />

        <TextView
            android:id="@+id/glass_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="유리병"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_margin="17dp"
            app:srcCompat="@drawable/bottle" />

        <TextView
            android:id="@+id/plastic_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="내용물을 물로 헹구어 이물질을 제거한 후 배출해 주세요." />

        <TextView
            android:id="@+id/glass_explanation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="유리병과 재질이 다른 부속품들은 제거하여 배출해 주세요." />
        <TextView
            android:id="@+id/plastic_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="보증금병"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/plastic_4"
            android:layout_width="87dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/glass_1" />
        <TextView
            android:id="@+id/plastic_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주류 제품, 콜라, 사이다"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_margin="17dp"
            app:srcCompat="@drawable/bottl1" />
        <TextView
            android:id="@+id/glass_explanation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="빈 용기 보증금 대상인 유리병류의 경우 내용물을 비우고 뚜껑을 닫아 배출해 주세요." />

        <TextView
            android:id="@+id/explanaiton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="참고"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/explanation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="깨진 유리는 두꺼운 종이에 감싸서 '깨진 유리' 표기 후 일반 쓰레기로 배출해 주세요." />
        <TextView
            android:id="@+id/explanation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="거울, 전구, 도자기류, 내열 식기류는 유리가 아닙니다." />
    </LinearLayout>
</ScrollView>