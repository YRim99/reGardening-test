<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".styrofoam">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true"
        android:padding="30dp">


    <TextView
        android:id="@+id/galss_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="스티로폼"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <ImageView
        android:id="@+id/glass_2"
        android:layout_width="87dp"
        android:layout_height="71dp"
        app:srcCompat="@drawable/plastic" />

    <TextView
        android:id="@+id/glass_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="스티로폼 완충재"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="96dp"
        android:layout_height="92dp"
        android:layout_margin="17dp"
        app:srcCompat="@drawable/bottle" />

    <TextView
        android:id="@+id/plastic_explanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="송장, 테이프 등 이물질을 제고하고 흰색 스티로폼인 경우만 배출해 주세요." />

    <TextView
        android:id="@+id/glass_explanation2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="부피가 큰 스티로폼은 부숴서 배출해 주세요." />

    <TextView
        android:id="@+id/explanaiton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="참고"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:id="@+id/explanation3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="17dp"
        android:text="유색 스티로폼, 무늬가 있는 스티로폼, 과일 포장지, 식재료 트레이 등은 일반 쓰레기로 배출해 주세요." />
    </LinearLayout>

  </ScrollView>