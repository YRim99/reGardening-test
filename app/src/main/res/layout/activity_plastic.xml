<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".plastic">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fillViewport="true"
        android:padding="30dp">


        <TextView
            android:id="@+id/plastic_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="플라스틱"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/plastic_2"
            android:layout_width="87dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/plastic" />

        <TextView
            android:id="@+id/vinil_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비닐"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_margin="17dp"
            app:srcCompat="@drawable/plastic_1" />

        <TextView
            android:id="@+id/plastic_explanation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="이물질을 깨끗이 제거한 후 배출해 주세요." />

        <TextView
            android:id="@+id/plastic_explanation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="플라스틱 중 PVC, OTHER라고 표기된 제품은 일반 쓰레기로 배출해 주세요." />

        <TextView
            android:id="@+id/plastic_explanation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="본체와 재질이 다른 부속품들은 제거하여 배출해 주세요." />
        <TextView
            android:id="@+id/plastic_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="페트류"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <ImageView
            android:id="@+id/plastic_4"
            android:layout_width="87dp"
            android:layout_height="71dp"
            app:srcCompat="@drawable/pet1" />
        <TextView
            android:id="@+id/plastic_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="페트병"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="96dp"
            android:layout_height="92dp"
            android:layout_margin="17dp"
            app:srcCompat="@drawable/pet" />
        <TextView
            android:id="@+id/plastic_explanation3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="내용물, 라벨 등을 제거한 후 배출해 주세요." />
        <TextView
            android:id="@+id/plastic_explanation4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="투명 페트라면 투명 페트 전용 수거함에 배출해 주세요." />
        <TextView
            android:id="@+id/explanaiton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="참고"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/explanation2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="17dp"
            android:text="크기가 작은 일회용 숟가락, 빨대 등은 일반 쓰레기로 배출해 주세요." />

    </LinearLayout>
</ScrollView>